{{!-- Main --}}
<div class="container">

    {{!-- Jumbotron --}}
    <div class="jumbotron">
        <h1>Saved Articles</h1>
        <p>Your Saved Articles</p>
    </div>

    {{!-- Panel for each saved article --}}
    {{#each savedArticles}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title pull-left">{{this.title}}</h3>
                <form action="/api/article/remove/:{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="id" value={{this.id}}>
                    <button class="btn btn-danger pull-right" type="submit">Remove From Saved</button>
                </form> 
                <button type="button" class="article-notes btn btn-warning" id={{this.id}} data-title="{{this.title}}">Add Note</button>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <p>{{this.blurb}}</p>
                <p><a href="{{this.link}}" target="blank">Link to Article</a></p>
            </div>
        </div>
    {{/each}}

    {{!-- Panel to display if no saved articles exist --}}
    {{#unless savedArticles}}
        <div class="panel panel-default">
            <div class="panel-body">You have no saved articles.</div>
        </div>
    {{/unless}}

</div>

{{!-- Modal --}}
<div class="modal fade" tabindex="-1" role="dialog" id="comment-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <form class="form-inline">
                    <div class="form-group pull-left">
                        <label for="comment">New Note</label>
                        <input type="text" class="form-control" id="comment">
                    </div>
                    <button type="submit" class="btn btn-success" id="save-note-btn">Save Note</button>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

{{!-- JavaScript --}}
<script type="text/javascript" src="/js/script.js"></script>